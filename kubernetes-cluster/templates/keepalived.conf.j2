vrrp_instance VI_1 {
    state MASTER  # Change to BACKUP on non-primary nodes
    interface {{ interface }}
    virtual_router_id 51
    priority {{ priority }}  # Set a unique priority for each node
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass securepassword
    }
    virtual_ipaddress {
        {{ vip }}
    }
}

